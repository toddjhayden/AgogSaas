{
  "dashboard": {
    "title": "AgogSaaS - Database Performance",
    "tags": ["agogsaas", "database", "postgresql"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Connection Pool Utilization",
        "type": "gauge",
        "targets": [
          {
            "expr": "(db_connection_pool_size / 200) * 100",
            "legendFormat": "{{environment}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 70, "color": "yellow" },
                { "value": 90, "color": "red" }
              ]
            },
            "unit": "percent",
            "max": 100,
            "min": 0
          }
        },
        "gridPos": { "h": 8, "w": 8, "x": 0, "y": 0 }
      },
      {
        "id": 2,
        "title": "Query Performance (Slow Queries > 1s)",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(db_query_duration_seconds_count{query_duration=\">1s\"}[5m]))",
            "legendFormat": "Slow Queries"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 1, "color": "yellow" },
                { "value": 10, "color": "red" }
              ]
            },
            "unit": "short"
          }
        },
        "gridPos": { "h": 4, "w": 8, "x": 8, "y": 0 }
      },
      {
        "id": 3,
        "title": "Cache Hit Ratio",
        "type": "gauge",
        "targets": [
          {
            "expr": "(sum(pg_stat_database_blks_hit) / (sum(pg_stat_database_blks_hit) + sum(pg_stat_database_blks_read))) * 100",
            "legendFormat": "Hit Ratio"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 95, "color": "yellow" },
                { "value": 98, "color": "green" }
              ]
            },
            "unit": "percent",
            "max": 100,
            "min": 0
          }
        },
        "gridPos": { "h": 8, "w": 8, "x": 16, "y": 0 }
      },
      {
        "id": 4,
        "title": "Replication Lag (Edge → Regional → Global)",
        "type": "graph",
        "targets": [
          {
            "expr": "pg_replication_lag_seconds",
            "legendFormat": "{{source}} → {{target}}"
          }
        ],
        "yaxes": [
          { "format": "s", "label": "Lag (seconds)" },
          { "format": "short" }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": { "params": [60], "type": "gt" },
              "operator": { "type": "and" },
              "query": { "params": ["A", "5m", "now"] },
              "reducer": { "params": [], "type": "avg" },
              "type": "query"
            }
          ],
          "name": "Replication Lag > 60s"
        },
        "gridPos": { "h": 8, "w": 24, "x": 0, "y": 8 }
      },
      {
        "id": 5,
        "title": "Query Duration by Type",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(db_query_duration_seconds_bucket[5m])) by (query_type)",
            "legendFormat": "{{query_type}} (P95)"
          }
        ],
        "yaxes": [
          { "format": "s", "label": "Duration" },
          { "format": "short" }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 }
      },
      {
        "id": 6,
        "title": "Transaction Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(pg_stat_database_xact_commit[5m]) + rate(pg_stat_database_xact_rollback[5m])",
            "legendFormat": "{{environment}} - Transactions"
          }
        ],
        "yaxes": [
          { "format": "tps", "label": "Transactions/sec" },
          { "format": "short" }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 }
      },
      {
        "id": 7,
        "title": "Top 10 Tables by Size",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, pg_table_size_bytes)",
            "legendFormat": "",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "renameByName": {
                "table_name": "Table",
                "Value": "Size"
              }
            }
          }
        ],
        "fieldConfig": {
          "overrides": [
            {
              "matcher": { "id": "byName", "options": "Size" },
              "properties": [
                { "id": "unit", "value": "bytes" }
              ]
            }
          ]
        },
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 24 }
      },
      {
        "id": 8,
        "title": "Index Usage Efficiency",
        "type": "table",
        "targets": [
          {
            "expr": "(pg_stat_user_indexes_idx_scan / (pg_stat_user_indexes_idx_scan + pg_stat_user_tables_seq_scan)) * 100",
            "legendFormat": "",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "renameByName": {
                "table_name": "Table",
                "Value": "Index Usage %"
              }
            }
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 24 }
      },
      {
        "id": 9,
        "title": "Active Connections by State",
        "type": "graph",
        "targets": [
          {
            "expr": "pg_stat_activity_count by (state)",
            "legendFormat": "{{state}}"
          }
        ],
        "yaxes": [
          { "format": "short", "label": "Connections" },
          { "format": "short" }
        ],
        "gridPos": { "h": 8, "w": 24, "x": 0, "y": 32 }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    }
  }
}
