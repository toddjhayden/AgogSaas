{
  "dashboard": {
    "title": "AgogSaaS - API Performance",
    "tags": ["agogsaas", "api", "graphql"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "GraphQL Requests/sec",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(graphql_query_total[5m]))",
            "legendFormat": "Requests"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "palette-classic" },
            "unit": "reqps"
          }
        },
        "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 }
      },
      {
        "id": 2,
        "title": "Query Success Rate",
        "type": "gauge",
        "targets": [
          {
            "expr": "(sum(rate(graphql_query_total{status=\"success\"}[5m])) / sum(rate(graphql_query_total[5m]))) * 100",
            "legendFormat": "Success %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 95, "color": "yellow" },
                { "value": 99, "color": "green" }
              ]
            },
            "unit": "percent",
            "max": 100
          }
        },
        "gridPos": { "h": 8, "w": 6, "x": 6, "y": 0 }
      },
      {
        "id": 3,
        "title": "Concurrent Users",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(active_users_gauge)",
            "legendFormat": "Users"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "palette-classic" },
            "unit": "short"
          }
        },
        "gridPos": { "h": 4, "w": 6, "x": 12, "y": 0 }
      },
      {
        "id": 4,
        "title": "WebSocket Connections",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(websocket_connections_active)",
            "legendFormat": "Active"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "palette-classic" },
            "unit": "short"
          }
        },
        "gridPos": { "h": 4, "w": 6, "x": 18, "y": 0 }
      },
      {
        "id": 5,
        "title": "Error Rate by Status Code",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{status_code=~\"4..\"}[5m])) by (status_code)",
            "legendFormat": "{{status_code}} (Client)"
          },
          {
            "expr": "sum(rate(http_requests_total{status_code=~\"5..\"}[5m])) by (status_code)",
            "legendFormat": "{{status_code}} (Server)"
          }
        ],
        "yaxes": [
          { "format": "reqps", "label": "Errors/sec" },
          { "format": "short" }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 }
      },
      {
        "id": 6,
        "title": "Request Rate by Endpoint",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total[5m])) by (route)",
            "legendFormat": "{{route}}"
          }
        ],
        "yaxes": [
          { "format": "reqps", "label": "Requests/sec" },
          { "format": "short" }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 }
      },
      {
        "id": 7,
        "title": "GraphQL Query Performance by Operation",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(graphql_query_duration_seconds_bucket[5m])) by (operation_name)",
            "legendFormat": "{{operation_name}} (P95)"
          }
        ],
        "yaxes": [
          { "format": "s", "label": "Duration" },
          { "format": "short" }
        ],
        "gridPos": { "h": 8, "w": 24, "x": 0, "y": 16 }
      },
      {
        "id": 8,
        "title": "Top 10 Slowest GraphQL Queries",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, avg(graphql_query_duration_seconds) by (operation_name))",
            "legendFormat": "",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "renameByName": {
                "operation_name": "Operation",
                "Value": "Avg Duration"
              }
            }
          }
        ],
        "fieldConfig": {
          "overrides": [
            {
              "matcher": { "id": "byName", "options": "Avg Duration" },
              "properties": [
                { "id": "unit", "value": "s" },
                {
                  "id": "custom.displayMode",
                  "value": "color-background"
                },
                {
                  "id": "thresholds",
                  "value": {
                    "mode": "absolute",
                    "steps": [
                      { "value": 0, "color": "green" },
                      { "value": 1, "color": "yellow" },
                      { "value": 3, "color": "red" }
                    ]
                  }
                }
              ]
            }
          ]
        },
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 24 }
      },
      {
        "id": 9,
        "title": "Mutation Success/Failure Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(graphql_mutation_total{status=\"success\"}[5m]))",
            "legendFormat": "Success"
          },
          {
            "expr": "sum(rate(graphql_mutation_total{status=\"failure\"}[5m]))",
            "legendFormat": "Failure"
          }
        ],
        "yaxes": [
          { "format": "ops", "label": "Mutations/sec" },
          { "format": "short" }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 24 }
      },
      {
        "id": 10,
        "title": "API Latency Percentiles",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P50"
          },
          {
            "expr": "histogram_quantile(0.90, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P90"
          },
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P95"
          },
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P99"
          }
        ],
        "yaxes": [
          { "format": "s", "label": "Latency" },
          { "format": "short" }
        ],
        "gridPos": { "h": 8, "w": 24, "x": 0, "y": 32 }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    }
  }
}
