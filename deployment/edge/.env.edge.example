# AgogSaaS Edge Configuration
# Copy this file to .env and configure for your facility

# ============================================================================
# Facility Information
# ============================================================================
FACILITY_ID=facility-la-001
TENANT_ID=acme-corp
REGION=US-EAST

# ============================================================================
# Database Configuration
# ============================================================================
EDGE_DB_NAME=agog_edge
EDGE_DB_USER=edge_user
EDGE_DB_PASSWORD=changeme_secure_password_here
EDGE_DB_PORT=5432

# ============================================================================
# Regional Cloud Connection
# ============================================================================
# Will be set automatically based on REGION:
# US-EAST: https://us-east.agogsaas.com
# EU-CENTRAL: https://eu-central.agogsaas.com
# APAC: https://apac.agogsaas.com
REGIONAL_CLOUD_URL=https://us-east.agogsaas.com
REGIONAL_CLOUD_API_KEY=your_api_key_from_cloud_here

# ============================================================================
# Security
# ============================================================================
JWT_SECRET=your_jwt_secret_minimum_32_characters_here

# ============================================================================
# Sync Configuration
# ============================================================================
SYNC_INTERVAL=30              # Seconds between sync attempts
SYNC_BATCH_SIZE=1000          # Records per sync batch
SYNC_RETRY_ATTEMPTS=3         # Retry failed syncs
SYNC_RETRY_DELAY_SECONDS=60   # Delay between retries

# ============================================================================
# Ollama Configuration (Phase 4 Memory - Optional)
# ============================================================================
# Enable only if edge computer has 32GB+ RAM
OLLAMA_ENABLED=false
OLLAMA_MODEL=nomic-embed-text

# ============================================================================
# Environment
# ============================================================================
NODE_ENV=production

# ============================================================================
# Health Monitoring
# ============================================================================
HEALTH_REPORT_INTERVAL=30     # Seconds between health reports to cloud
CPU_ALERT_THRESHOLD=80        # Percent
MEMORY_ALERT_THRESHOLD=85     # Percent
DISK_ALERT_THRESHOLD=90       # Percent

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=info                # debug, info, warn, error
