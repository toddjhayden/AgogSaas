# SDLC Platform Environment
# Copy to .env and fill in your values
# For use with sdlc/docker-compose.yml

# Node environment
NODE_ENV=development

# NATS Authentication
NATS_USER=agents
NATS_PASSWORD=your-secure-nats-password-here

# Database Configuration
SDLC_DB_HOST=postgres
SDLC_DB_PORT=5432
SDLC_DB_NAME=agent_memory
SDLC_DB_USER=agent_user
SDLC_DB_PASSWORD=your-secure-db-password-here

# Ollama (embeddings)
OLLAMA_URL=http://ollama:11434

# SDLC Agent Personas (relative to /app in container)
SDLC_AGENTS_DIR=/app/agents/personas

# Project workspace root (relative to /app in container)
PROJECT_ROOT=/workspace/projects
